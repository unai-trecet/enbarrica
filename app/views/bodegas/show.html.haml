%article.video
  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        %img(src="#{@bodega.img1}")
      .video_info.col-sm-3
        %header
          %h3= @bodega.nombre
          %span Valoracion
          #star 

          :javascript
            $(document).ready(function() {
              $('#star').raty({
                readOnly: true,
                score: ' #{ @bodega.average_rating } ',
                path: '../assets/'
              });  
            });
            
          %p Número de vinos valorados: #{ @bodega.number_of_rated_vinos }

          %p= @bodega.denominacion
        %p= @bodega.descripcion
%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      / .col-md-6.col-md-offset-2{ id: "comentario-form", style: "display:none;" }
      #comentario-form

      %header
        %h2= "Número de comentarios #{ @bodega.comentarios.count }"
      %ul
        = render partial: "comentarios/index", locals: { comentarios: @bodega.comentarios }
