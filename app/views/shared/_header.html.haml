%section#top-header.row
  %h1.col-md-2
    = link_to "Enbarrica"
  %ul.col-md-4.clearfix
    %li= link_to "Vinos"
    %li= link_to "Mis listas"
    %li= link_to "Gente"
  %form.col-md-5.navbar-form(action="")
    .form-group
      %input.form-control(type="text" placeholder="Search for videos here")
    %button.btn.btn-default(type="submit") Search
  #user_links.pull-right
    %ul
      %li.dropdown
        - if current_user
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            = "#{ current_user.full_name }"
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              = link_to "Tu cuenta", user_path(current_user)
              = link_to "Invitacion"
              = link_to "Salir", sign_out_path
